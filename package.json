{
  "name": "state-machine-js",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/**",
    "examples/**"
  ],
  "scripts": {
    "prepare": "yarn prepare:git",
    "prepare:git": "husky install || echo \"skip husky\"",
    "build": "turbo run build",
    "watch": "turbo run watch",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:strict": "turbo run lint:strict",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@neuledge/eslint-config": "^1.0.0-alpha.9",
    "@neuledge/jest-preset": "^1.0.0-alpha.9",
    "@neuledge/tsconfig": "^1.0.0-alpha.9",
    "@swc/core": "^1.3.21",
    "@types/jest": "^28.1.6",
    "@types/pluralize": "^0.0.29",
    "@types/node": "^16",
    "concurrently": "^7.3.0",
    "eslint": "^8.29.0",
    "husky": "^8.0.1",
    "jest": "^29.3.1",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "ts-patch": "^2.0.2",
    "turbo": "^1.6.3",
    "tsup": "^6.5.0",
    "typescript": "~4.8"
  }
}
