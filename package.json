{
  "name": "state-machine-js",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "bootstrap": "yarn lerna bootstrap && yarn build",
    "prepare": "husky install || echo \"skip husky\"",
    "lint": "NODE_OPTIONS=\"--max_old_space_size=8000\" eslint . --ext \"js,jsx,ts,tsx,mjs,cjs\"",
    "fix": "yarn run fix:lint",
    "fix:lint": "yarn run lint --fix",
    "test": "yarn compile:test && yarn run-all -m test && yarn run test:lint",
    "test:lint": "yarn run lint --max-warnings 0",
    "test:commit": "if [[ -z \"$(git status --untracked-files=no --porcelain)\" ]]; then\n  echo \"All filed committed.\"\nelse\n  echo \"Uncommitted changes found. Please Commit them first.\" && exit 1\nfi",
    "build": "yarn run compile",
    "compile": "ttsc -b",
    "compile:test": "ttsc --noEmit",
    "compile:watch": "ttsc -b -w",
    "compile:clean": "ttsc -b --clean",
    "release": "yarn lerna publish",
    "preversion": "yarn run test:commit && yarn run clean && yarn run build && yarn run test",
    "clean": "yarn run compile:clean && yarn run-all -m clean",
    "watch": "concurrently yarn:*:watch",
    "run-all": "yarn run wsrun"
  },
  "devDependencies": {
    "@types/node": "^16",
    "@neuledge/eslint-config": "^1.0.0-alpha.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "concurrently": "^7.3.0",
    "eslint": "^8.20.0",
    "husky": "^8.0.1",
    "lerna": "^5.1.8",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "nx": "^14.4.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "ttypescript": "^1.5.13",
    "typescript": "^4.8.3",
    "wsrun": "^5.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": "eslint"
  }
}
