{
  "name": "state-machine-js",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/**",
    "examples/**"
  ],
  "scripts": {
    "prepare": "yarn prepare:ts && yarn prepare:git",
    "prepare:ts": "ts-patch install -s",
    "prepare:git": "husky install || echo \"skip husky\"",
    "build": "turbo run build",
    "types": "turbo run types",
    "test": "turbo run test lint",
    "test:strict": "turbo run test lint:strict",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "lint:strict": "turbo run lint:strict",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@neuledge/eslint-config": "^1.0.0-alpha.18",
    "@neuledge/jest-ts-preset": "^1.0.0-alpha.10",
    "@neuledge/tsconfig": "^1.0.0-alpha.17",
    "@swc/core": "^1.3.36",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.1",
    "eslint": "^8.34.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "tsup": "^6.6.3",
    "turbo": "^1.8.2",
    "typescript": "^4.9.5"
  }
}
