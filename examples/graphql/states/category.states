"""
A posts category
"""
state Category {
  @id id: Number = 1
  name: String = 2
  description?: String = 3
  posts: Post[] = 4
}

"""
Create a new category
"""
create(
  name: String,
  description?: String,
): Category => {
  id: AutoGenerated(this),
  name,
  description,
}

"""
Update the category details
"""
Category.update(
  name: String,
  description?: String,
): Category => {
  name,
  description,
}

"""
Delete the category and all it's related posts
"""
Category.delete(): Void
